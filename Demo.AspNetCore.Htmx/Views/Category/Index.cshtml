@model IEnumerable<Demo.AspNetCore.Htmx.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p hx-boost="true" hx-push-url="false" hx-target="#mainId" hx-indicator="this">
    <a asp-action="Create" data-loading-class="disabled">Create New</a>
    <partial name="_indicator" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string id = "id-category-" + item.CategoryId;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td hx-boost="true" hx-push-url="false" hx-target="#mainId" hx-indicator="#@id">
                    <partial name="_indicatorId" model="@id" />
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" data-loading-class="disabled">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId" data-loading-class="disabled">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" data-loading-class="disabled">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
