@model Demo.AspNetCore.Htmx.Models.Manufacturer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div hx-indicator="this">
    <div>
        <span class="h4">Manufacturer</span>
        @{
            await Html.RenderPartialAsync("_indicator");
        }
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ManufacturerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ManufacturerName)
        </dd>
    </dl>
    @*'Back to List' has the same url as the 'nav-link' for 'Manufacturer'.
    'data-loading-states' defines a scope for the loading states so only elements within that scope are processed.
    The nav-link 'Manufacturer' remains enabled*@
    <div hx-boost="true" hx-push-url="false" hx-target="#mainId" data-loading-states>
        <a asp-action="Edit" asp-route-id="@Model?.ManufacturerId" data-loading-class="disabled">Edit</a> |
        <a asp-action="Index" data-loading-class="disabled">Back to List</a>
    </div>
</div>
